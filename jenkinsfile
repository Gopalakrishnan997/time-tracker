 pipeline {
               agent any     
               stages{
                    stage("cleaning stage"){
                           steps{
                               bat "mvn clean"
                            }
                            }
              stage("Testing stage"){
                           steps{
                               bat "mvn test"
                            }
                            }
                stage("packaging stage"){
                           steps{
                               bat "mvn package"
                            }
                            }
               stage("deploy"){
                           steps{
                              input("Do you want to deploy?")
                              deploy adapters: [tomcat9(path: '', url: 'http://localhost:9080')], contextPath: '/demo', war: '**/*.war'
                            }}
                          
                            stage("Email"){
                           steps{
                     
                               mail bcc: '', body: 'sample mail', cc: '', from: '', replyTo: '', subject: 'sample mail for jenkins', to: 'gopalrockz1997@gmail.com' 
                            }}
}
} 
