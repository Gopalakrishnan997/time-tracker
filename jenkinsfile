 pipeline {
               agent any     
               stages{
                    stage("cleaning stage"){
                           steps{
                               bat "mvn clean"
                            }
                            }
              stage("Testing stage"){
                           steps{
                               bat "mvn test"
                            }
                            }
                stage("packaging stage"){
                           steps{
                               bat "mvn package"
                            }
                            }
               stage("Results"){
                           steps{
                              input("Do you want to capture results?")
                               junit '**/target/surefire-reports/TEST-*.xml'
                                archiveArtifacts 'target/*.jar'
                            }}
}
}
